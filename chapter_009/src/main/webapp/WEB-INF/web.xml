<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--FirstTask-->
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>servlets.EchoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>
    <!--SecondTask-->
    <servlet>
        <servlet-name>UserStoreServlet</servlet-name>
        <servlet-class>userstore.UserStoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserStoreServlet</servlet-name>
        <url-pattern>/userstore</url-pattern>
    </servlet-mapping>
    <!--ThirdTask Servlets-->
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>userstoreupdated.DeleteUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowUser</servlet-name>
        <servlet-class>userstoreupdated.ShowAndAddUsers</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UpdateUser</servlet-name>
        <servlet-class>userstoreupdated.UpdateUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUser</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowUser</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    <!--JSP Servlets-->
    <servlet>
        <servlet-name>ShowUserJSP</servlet-name>
        <servlet-class>userstorejsp.ShowAndAddUsersJSP</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowUserJSP</servlet-name>
        <url-pattern>/showjsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateUserJSP</servlet-name>
        <servlet-class>userstorejsp.UpdateUserJSP</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserJSP</servlet-name>
        <url-pattern>/updatejsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUserJSP</servlet-name>
        <servlet-class>userstorejsp.DeleteUserJSP</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserJSP</servlet-name>
        <url-pattern>/deletejsp</url-pattern>
    </servlet-mapping>
    <!--JSTL Task Servlets-->
    <servlet>
        <servlet-name>ShowUserJSTL</servlet-name>
        <servlet-class>userstorejstl.ShowAndAddUsersJSTL</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowUserJSTL</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUserJSTL</servlet-name>
        <servlet-class>userstorejstl.DeleteUserJSTL</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserJSTL</servlet-name>
        <url-pattern>/deletejstl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateUserJSTL</servlet-name>
        <servlet-class>userstorejstl.UpdateUserJSTL</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserJSTL</servlet-name>
        <url-pattern>/updatejstl</url-pattern>
    </servlet-mapping>
    <!--Servlets with authorization task-->
    <listener>
        <listener-class>userstoreauth.service.Listener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ShowUserAuth</servlet-name>
        <servlet-class>userstoreauth.servlets.ShowUsers</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowUserAuth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>userstoreauth.servlets.Login</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/auth/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserDataServlet</servlet-name>
        <url-pattern>/auth/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditUserDataServlet</servlet-name>
        <servlet-class>userstoreauth.servlets.EditUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>userstoreauth.servlets.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/auth/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUserAuth</servlet-name>
        <servlet-class>userstoreauth.servlets.DeleteUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserAuth</servlet-name>
        <url-pattern>/auth/delete</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>StartFilter</filter-name>
        <filter-class>userstoreauth.filters.Main</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StartFilter</filter-name>
        <url-pattern>/auth</url-pattern>
        <url-pattern>/auth/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>userstoreauth.filters.Admin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/auth/add</url-pattern>
        <url-pattern>/auth/delete</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>userstoreauth.filters.EditUser</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/auth/edit</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>GetCitiesOfCountry</servlet-name>
        <servlet-class>userstoreauth.servlets.GetCitiesOfCountry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCitiesOfCountry</servlet-name>
        <url-pattern>/auth/getcity</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>userstoreauth.servlets.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/auth/add</url-pattern>
    </servlet-mapping>
</web-app>
